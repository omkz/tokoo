<div id="checkout-summary" class="bg-white p-6 rounded-lg shadow-xl border border-slate-100 ring-1 ring-slate-900/5">
  <h2 class="text-xl font-bold text-slate-900 mb-6 flex items-center gap-2">
    <svg class="h-5 w-5 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
    </svg>
    Order Summary
  </h2>

  <div class="flow-root mb-6">
    <ul role="list" class="-my-4 divide-y divide-slate-100">
      <% cart.cart_items.each do |item| %>
        <li class="flex py-4">
          <div class="h-16 w-16 shrink-0 overflow-hidden rounded-xl border border-slate-200 bg-slate-50">
            <% if item.product.product_images.any? %>
               <%= image_tag item.product.product_images.first.image, class: "h-full w-full object-cover object-center" %>
            <% else %>
               <div class="h-full w-full flex items-center justify-center text-slate-400">
                 <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                 </svg>
               </div>
            <% end %>
          </div>
          <div class="ml-4 flex flex-1 flex-col justify-center">
            <div class="flex justify-between text-base font-semibold text-slate-900">
              <h3 class="truncate w-32"><%= item.product.name %></h3>
              <p class="ml-4 tabular-nums"><%= number_to_currency(item.subtotal) %></p>
            </div>
            <p class="mt-1 text-sm text-slate-500">Qty <%= item.quantity %></p>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

  <!-- Coupon Section -->
  <div class="border-t border-slate-100 py-6">
    <div data-controller="coupon">
      <h3 class="text-sm font-bold text-slate-900 uppercase tracking-wider mb-4 flex items-center justify-between">
        <span>Punya Kode Promo?</span>
        <button type="button" 
                data-action="click->coupon#toggle" 
                class="text-indigo-600 hover:text-indigo-700 text-xs font-semibold focus:outline-none">
          <%= local_assigns[:coupon_success] ? 'Ganti Kode' : 'Pakai Kupon' %>
        </button>
      </h3>
      
      <div id="coupon-form" class="<%= local_assigns[:coupon_success] ? 'hidden' : '' %> mb-4">
        <%= form_with url: apply_coupon_path, method: :post, class: "flex gap-2" do |f| %>
          <%= f.text_field :code, placeholder: "Contoh: DISKON10", class: "flex-1 block w-full rounded-xl border-slate-200 shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm py-2" %>
          <%= f.submit "Pasang", class: "px-4 py-2 bg-slate-900 text-white text-sm font-bold rounded-xl hover:bg-slate-800 transition-colors shadow-lg" %>
        <% end %>
      </div>

      <% if local_assigns[:coupon_success] %>
        <div class="bg-indigo-50 border border-indigo-100 rounded-xl p-3 flex items-center justify-between">
          <div class="flex items-center gap-2">
            <svg class="h-4 w-4 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
            </svg>
            <span class="text-sm font-bold text-indigo-900"><%= session[:applied_coupon_id] ? Coupon.find(session[:applied_coupon_id]).code : 'COUPON' %></span>
          </div>
          <%= button_to remove_coupon_path, method: :delete, class: "text-slate-400 hover:text-red-500 transition-colors" do %>
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Price Calculation -->
  <div class="border-t border-slate-100 pt-6 space-y-3">
    <div class="flex justify-between text-sm text-slate-600">
      <p>Subtotal</p>
      <p class="tabular-nums"><%= number_to_currency(cart.total_price) %></p>
    </div>
    
    <% if local_assigns[:discount_amount] && local_assigns[:discount_amount] > 0 %>
      <div class="flex justify-between text-sm text-green-600 font-bold">
        <p>Diskon</p>
        <p class="tabular-nums">- <%= number_to_currency(local_assigns[:discount_amount]) %></p>
      </div>
    <% end %>

    <div class="flex justify-between text-sm text-slate-500">
      <p>Shipping</p>
      <p class="italic text-xs">Calculated based on address</p>
    </div>

    <div class="flex justify-between text-lg font-black text-slate-900 pt-4 border-t border-slate-100 mt-4">
      <p>Total Akhir</p>
      <% total = cart.total_price - (local_assigns[:discount_amount] || 0) %>
      <p class="text-indigo-600 tabular-nums"><%= number_to_currency(total) %></p>
    </div>
  </div>

  <div class="mt-8">
    <button type="submit" form="checkout-form" class="w-full flex justify-center items-center gap-2 py-4 px-6 border border-transparent rounded-2xl shadow-glow-indigo text-base font-black text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all transform hover:scale-[1.02] active:scale-95">
      <span>Proses Pembayaran</span>
      <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </button>
  </div>
</div>

