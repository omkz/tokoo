<div class="bg-gray-50 min-h-screen py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg:grid lg:grid-cols-4 lg:gap-x-8">
      <!-- Sidebar Filters -->
      <aside class="hidden lg:block">
        <h2 class="sr-only">Filters</h2>
        
        <%= form_with url: search_path, method: :get, class: "space-y-8 sticky top-24" do |f| %>
          <%= f.hidden_field :q, value: @query %>
          
          <!-- Categories -->
          <div>
            <h3 class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-4">Categories</h3>
            <div class="space-y-3">
              <div class="flex items-center">
                <%= f.radio_button :category_id, "", checked: @category_id.blank?, class: "h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500", onchange: "this.form.submit()" %>
                <%= f.label :category_id_all, "All Categories", value: "", class: "ml-3 text-sm text-gray-600 cursor-pointer" %>
              </div>
              <% @categories.each do |category| %>
                <div class="flex items-center">
                  <%= f.radio_button :category_id, category.id, checked: @category_id.to_s == category.id.to_s, class: "h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500", onchange: "this.form.submit()" %>
                  <%= f.label "category_id_#{category.id}", category.name, value: category.id, class: "ml-3 text-sm text-gray-600 cursor-pointer" %>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Price Range -->
          <div class="pt-6 border-t border-gray-200">
            <h3 class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-4">Price Range</h3>
            <div class="grid grid-cols-2 gap-2 mb-4">
              <div>
                <%= f.number_field :min_price, value: @min_price, placeholder: "Min (Rp)", class: "w-full p-2 bg-white border border-gray-200 rounded-lg text-xs focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
              </div>
              <div>
                <%= f.number_field :max_price, value: @max_price, placeholder: "Max (Rp)", class: "w-full p-2 bg-white border border-gray-200 rounded-lg text-xs focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
              </div>
            </div>
            <%= f.submit "Apply Filters", class: "w-full py-2 bg-gray-900 text-white rounded-lg text-xs font-bold hover:bg-gray-800 transition-colors cursor-pointer shadow-sm" %>
            <% if @category_id.present? || @min_price.present? || @max_price.present? %>
              <%= link_to "Clear All Filters", search_path(q: @query), class: "block text-center mt-3 text-[10px] text-red-500 font-bold uppercase tracking-wider hover:text-red-700 transition-colors" %>
            <% end %>
          </div>
        <% end %>
      </aside>

      <!-- Results Area -->
      <div class="lg:col-span-3">
        <!-- Header -->
        <div class="mb-8 flex flex-col md:flex-row md:items-end md:justify-between gap-4">
          <div>
            <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">
              <% if @query.present? %>
                Results for "<span class="text-blue-600"><%= @query %></span>"
              <% else %>
                Browse Products
              <% end %>
            </h1>
            <p class="mt-2 text-sm text-gray-500">
              Showing <%= pluralize(@products.count, "product") %>
            </p>
          </div>
        </div>

        <% if @products.any? %>
          <div class="grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-3 xl:gap-x-8">
            <% @products.each do |product| %>
              <div class="group relative flex flex-col bg-white rounded-3xl border border-gray-100 shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden hover:-translate-y-1">
                <!-- Product Image -->
                <div class="aspect-w-1 aspect-h-1 w-full overflow-hidden bg-gray-50 p-6">
                  <% if product.primary_image %>
                    <img src="<%= product.image_url %>" alt="<%= product.name %>" class="h-full w-full object-contain object-center transition-transform duration-500 group-hover:scale-110">
                  <% else %>
                    <div class="flex items-center justify-center h-full text-gray-300 italic">No image</div>
                  <% end %>
                  
                  <!-- Quick Actions -->
                  <div class="absolute inset-0 bg-black/5 opacity-0 group-hover:opacity-100 transition-opacity"></div>
                  <%= link_to "View Details", product_detail_path(product.slug), class: "absolute bottom-4 left-4 right-4 py-2 bg-white/95 backdrop-blur text-center text-sm font-bold text-gray-900 rounded-xl opacity-0 transform translate-y-4 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-300 shadow-lg" %>
                </div>

                <!-- Content -->
                <div class="p-6 flex flex-col flex-1">
                  <h3 class="text-sm font-bold text-gray-900 line-clamp-1 mb-1">
                    <%= link_to product.name, product_detail_path(product.slug) %>
                  </h3>
                  <p class="text-xs text-gray-500 line-clamp-2 mb-4 flex-1">
                    <%= product.short_description %>
                  </p>
                  
                  <div class="flex items-center justify-between mt-auto pt-4 border-t border-gray-50">
                    <p class="text-lg font-black text-blue-600">
                      <%= number_to_currency(product.price, unit: "Rp", precision: 0, delimiter: ".") %>
                    </p>
                    <div class="h-8 w-8 rounded-full bg-blue-50 text-blue-600 flex items-center justify-center group-hover:bg-blue-600 group-hover:text-white transition-colors">
                      <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                      </svg>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-24 bg-white rounded-3xl border-2 border-dashed border-gray-200">
            <div class="h-20 w-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="h-10 w-10 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">No products found</h3>
            <p class="text-gray-500 max-w-sm mx-auto">Try adjusting your filters or search keywords to find what you're looking for.</p>
            <div class="mt-8">
              <%= link_to "Clear All Filters", search_path(q: @query), class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-bold rounded-xl text-white bg-blue-600 hover:bg-blue-700 shadow-glow transition-all" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
