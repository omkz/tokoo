<aside class="w-full md:w-64 space-y-2">
  <div class="glass-card p-6 mb-6">
    <div class="flex items-center space-x-3 mb-4">
      <div class="w-12 h-12 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 font-bold text-xl">
        <%= current_user.email_address.first.upcase %>
      </div>
      <div class="overflow-hidden">
        <p class="font-bold text-slate-800 truncate"><%= current_user.email_address.split('@').first.humanize %></p>
        <p class="text-xs text-slate-500 truncate"><%= current_user.email_address %></p>
      </div>
    </div>
    <p class="text-xs text-slate-400 uppercase tracking-widest font-bold mb-2">Member Since</p>
    <p class="text-sm font-medium text-slate-600"><%= current_user.created_at.strftime("%B %Y") %></p>
  </div>

  <nav class="space-y-1">
    <a href="<%= profile_path %>" class="<%= current_page?(profile_path) ? 'bg-indigo-50 text-indigo-700' : 'text-slate-600 hover:bg-slate-50 hover:text-slate-900' %> flex items-center px-4 py-3 font-medium rounded-xl transition">
      <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1.5 1.5 0 001.5 1.5h3a1.5 1.5 0 001.5-1.5v-4a.5.5 0 01.5-.5h2a.5.5 0 01.5.5v4a1.5 1.5 0 001.5 1.5h3a1.5 1.5 0 001.5-1.5V10M9 21h6"></path></svg>
      Dashboard
    </a>
    <a href="<%= orders_path %>" class="<%= current_page?(orders_path) ? 'bg-indigo-50 text-indigo-700' : 'text-slate-600 hover:bg-slate-50 hover:text-slate-900' %> flex items-center px-4 py-3 font-medium rounded-xl transition">
      <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg>
      My Orders
    </a>
    <a href="<%= addresses_path %>" class="<%= current_page?(addresses_path) ? 'bg-indigo-50 text-indigo-700' : 'text-slate-600 hover:bg-slate-50 hover:text-slate-900' %> flex items-center px-4 py-3 font-medium rounded-xl transition">
      <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
      Address Book
    </a>
    <%= button_to session_path, method: :delete, class: "flex w-full items-center px-4 py-3 text-red-600 hover:bg-red-50 font-medium rounded-xl transition" do %>
      <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
      Sign Out
    <% end %>
  </nav>
</aside>
