<div class="bg-gray-50 min-h-screen py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-extrabold tracking-tight text-gray-900 mb-8 font-display">Shopping Cart</h1>

    <div class="lg:grid lg:grid-cols-12 lg:gap-x-12 lg:items-start">
      <div class="lg:col-span-8">
        <% if @cart.cart_items.any? %>
          <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-gray-100">
            <ul role="list" class="divide-y divide-gray-100">
              <% @cart.cart_items.each do |item| %>
                <li class="p-8 flex items-center gap-8 group">
                  <div class="h-32 w-32 shrink-0 overflow-hidden rounded-2xl bg-gray-50 p-4 border border-gray-100 group-hover:shadow-md transition-shadow">
                    <% if item.product.primary_image %>
                      <img src="<%= item.product.primary_image.url %>" alt="<%= item.product.name %>" class="h-full w-full object-contain">
                    <% end %>
                  </div>

                  <div class="flex-1 flex flex-col">
                    <div class="flex justify-between items-start">
                      <div>
                        <h3 class="text-xl font-bold text-gray-900 mb-1"><%= item.product.name %></h3>
                        <% if item.product_variant %>
                          <p class="text-sm text-gray-500 font-medium bg-gray-100 px-3 py-1 rounded-full inline-block">
                            <%= item.product_variant.variant_option_values.map { |v| v.product_option_value.value }.join(" / ") %>
                          </p>
                        <% end %>
                      </div>
                      <p class="text-xl font-bold text-blue-600"><%= number_to_currency(item.subtotal, unit: "Rp", precision: 0, delimiter: ".") %></p>
                    </div>

                    <div class="mt-6 flex items-center justify-between">
                      <div class="flex items-center gap-4 border border-gray-200 rounded-xl p-1">
                        <%= button_to cart_item_path(item, cart_item: { quantity: item.quantity - 1 }), method: :patch, disabled: item.quantity <= 1, class: "p-2 hover:bg-gray-50 rounded-lg text-gray-400 hover:text-gray-600 disabled:opacity-30" do %>
                          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 12H6" /></svg>
                        <% end %>
                        <span class="text-lg font-bold w-8 text-center"><%= item.quantity %></span>
                        <%= button_to cart_item_path(item, cart_item: { quantity: item.quantity + 1 }), method: :patch, class: "p-2 hover:bg-gray-50 rounded-lg text-gray-400 hover:text-gray-600" do %>
                          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" /></svg>
                        <% end %>
                      </div>

                      <%= button_to cart_item_path(item), method: :delete, class: "text-red-500 hover:text-red-700 p-2 hover:bg-red-50 rounded-xl transition-all", form: { data: { turbo_confirm: "Are you sure?" } } do %>
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                      <% end %>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        <% else %>
          <div class="bg-white rounded-3xl shadow-xl p-12 text-center border border-gray-100">
             <div class="bg-blue-50 h-24 w-24 rounded-full flex items-center justify-center mx-auto mb-6">
               <svg class="h-12 w-12 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
               </svg>
             </div>
             <h2 class="text-2xl font-bold text-gray-900 mb-2">Your cart is empty</h2>
             <p class="text-gray-600 mb-8">Seems like you haven't added anything to your cart yet.</p>
             <%= link_to "Browse Products", root_path, class: "inline-flex items-center justify-center px-8 py-4 bg-blue-600 text-white font-bold rounded-2xl hover:bg-blue-700 transition-all hover-lift shadow-glow" %>
          </div>
        <% end %>
      </div>

      <!-- Order Summary -->
      <div class="lg:col-span-4 mt-12 lg:mt-0">
        <div class="bg-white rounded-3xl shadow-xl p-8 border border-gray-100 sticky top-24">
          <h2 class="text-xl font-bold text-gray-900 mb-6">Order Summary</h2>

          <div class="space-y-4 mb-6 border-b border-gray-100 pb-6">
            <div class="flex justify-between text-gray-600">
              <p>Subtotal</p>
              <p id="cart-subtotal"><%= number_to_currency(@cart.total_price, unit: "Rp", precision: 0, delimiter: ".") %></p>
            </div>
            <div class="flex justify-between text-gray-600">
              <p>Shipping</p>
              <p class="text-green-500 font-bold uppercase text-xs">Calculated at checkout</p>
            </div>
          </div>

          <div class="flex justify-between text-2xl font-extrabold text-gray-900 mb-10">
            <p>Total</p>
            <p id="cart-total"><%= number_to_currency(@cart.total_price, unit: "Rp", precision: 0, delimiter: ".") %></p>
          </div>

          <%= link_to new_checkout_path, class: "w-full flex items-center justify-center px-8 py-4 bg-blue-600 text-white font-bold rounded-2xl hover:bg-blue-700 transition-all hover-lift shadow-glow text-lg" do %>
            Proceed to Checkout
          <% end %>

          <div class="mt-6 flex items-center justify-center gap-4 text-xs grayscale opacity-50">
            <img src="https://upload.wikimedia.org/wikipedia/commons/5/5e/Visa_Inc._logo.svg" class="h-4" alt="Visa">
            <img src="https://upload.wikimedia.org/wikipedia/commons/2/2a/Mastercard-logo.svg" class="h-6" alt="Mastercard">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
