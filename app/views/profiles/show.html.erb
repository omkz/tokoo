<% content_for :title, "My Account" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="flex flex-col md:flex-row gap-8">
    <!-- Sidebar -->
    <!-- Sidebar -->
    <%= render "layouts/account_sidebar" %>

    <!-- Main Content -->
    <div class="flex-1 space-y-8">
      
      <!-- Recent Orders -->
      <section>
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-xl font-bold text-slate-800">Recent Orders</h2>
          <a href="<%= orders_path %>" class="text-sm font-medium text-indigo-600 hover:text-indigo-800">View all orders &rarr;</a>
        </div>
        
        <div class="glass-card overflow-hidden">
          <% if @orders.any? %>
            <div class="overflow-x-auto">
              <table class="w-full text-left">
                <thead class="bg-slate-50 border-b border-slate-100">
                  <tr>
                    <th class="px-6 py-3 text-xs font-semibold text-slate-500 uppercase tracking-wider">Order</th>
                    <th class="px-6 py-3 text-xs font-semibold text-slate-500 uppercase tracking-wider">Date</th>
                    <th class="px-6 py-3 text-xs font-semibold text-slate-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-xs font-semibold text-slate-500 uppercase tracking-wider text-right">Total</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                  <% @orders.each do |order| %>
                    <tr class="hover:bg-slate-50 transition cursor-pointer" onclick="window.location='<%= order_path(order) %>'">
                      <td class="px-6 py-4 font-medium text-indigo-600">#<%= order.order_number %></td>
                      <td class="px-6 py-4 text-sm text-slate-600"><%= order.created_at.strftime("%b %d, %Y") %></td>
                      <td class="px-6 py-4">
                        <span class="inline-flex px-2 py-1 text-xs font-bold rounded-md uppercase
                          <%= order.status == 'delivered' ? 'bg-emerald-100 text-emerald-700' : 
                              order.status == 'cancelled' ? 'bg-red-100 text-red-700' : 
                              order.status == 'shipped' ? 'bg-blue-100 text-blue-700' : 'bg-amber-100 text-amber-700' %>">
                          <%= order.status %>
                        </span>
                      </td>
                      <td class="px-6 py-4 text-sm font-bold text-slate-800 text-right"><%= number_to_currency(order.total, unit: "Rp ", precision: 0, delimiter: ".") %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="p-8 text-center">
              <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-slate-100 mb-4">
                <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg>
              </div>
              <p class="text-slate-500 mb-4">You haven't placed any orders yet.</p>
              <a href="/" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 transition">
                Start Shopping
              </a>
            </div>
          <% end %>
        </div>
      </section>

      <!-- Account Settings -->
      <section>
        <h2 class="text-xl font-bold text-slate-800 mb-4">Account Settings</h2>
        <div class="glass-card p-6">
          <%= form_with(model: @user, url: profile_path, method: :patch, class: "space-y-4") do |f| %>
            <div>
              <%= f.label :email_address, class: "block text-sm font-medium text-slate-700 mb-1" %>
              <%= f.email_field :email_address, class: "w-full rounded-lg border-slate-200 bg-slate-50 text-slate-500", disabled: true %>
              <p class="text-xs text-slate-400 mt-1">Email address cannot be changed.</p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <%= f.label :password, "New Password", class: "block text-sm font-medium text-slate-700 mb-1" %>
                <%= f.password_field :password, class: "w-full rounded-lg border-slate-200 focus:border-indigo-500 focus:ring-indigo-500", placeholder: "Leave blank to keep current" %>
              </div>
              <div>
                <%= f.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-slate-700 mb-1" %>
                <%= f.password_field :password_confirmation, class: "w-full rounded-lg border-slate-200 focus:border-indigo-500 focus:ring-indigo-500", placeholder: "Confirm new password" %>
              </div>
            </div>

            <div class="pt-4 flex justify-end">
              <%= f.submit "Save Changes", class: "px-6 py-2 bg-slate-800 text-white font-semibold rounded-lg hover:bg-slate-900 transition cursor-pointer" %>
            </div>
          <% end %>
        </div>
      </section>

    </div>
  </div>
</div>
