<div class="mb-6 flex justify-between items-center">
  <h1 class="text-2xl font-bold text-gray-900">Audit Logs (Data Changes)</h1>
</div>

<div class="bg-white shadow-sm rounded-lg overflow-hidden border border-gray-200">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Item</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Event</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Who</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Changes</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Time</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @versions.each do |version| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm font-medium text-gray-900"><%= version.item_type %></div>
            <div class="text-xs text-gray-500">ID: <%= version.item_id %></div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
              <%= case version.event
                  when 'create' then 'bg-green-100 text-green-800'
                  when 'update' then 'bg-blue-100 text-blue-800'
                  when 'destroy' then 'bg-red-100 text-red-800'
                  else 'bg-gray-100 text-gray-800'
                  end %>">
              <%= version.event.upcase %>
            </span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <% if version.whodunnit %>
              <% user = User.find_by(id: version.whodunnit) %>
              <%= user ? user.email_address : "User ##{version.whodunnit}" %>
            <% else %>
              System / Console
            <% end %>
          </td>
          <td class="px-6 py-4 text-sm text-gray-500 max-w-md overflow-x-auto">
            <% if version.changeset.present? %>
              <div class="text-xs font-mono bg-gray-50 p-2 rounded">
                <% version.changeset.each do |attribute, values| %>
                  <!-- Skip internal fields -->
                  <% next if ['created_at', 'updated_at'].include?(attribute) %>
                  <div>
                    <span class="font-bold text-gray-700"><%= attribute %>:</span> 
                    <span class="text-red-500"><%= values[0].to_s.truncate(20) %></span> 
                    &rarr; 
                    <span class="text-green-600"><%= values[1].to_s.truncate(20) %></span>
                  </div>
                <% end %>
              </div>
            <% else %>
              <span class="text-gray-400 italic">No changes recorded</span>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= time_ago_in_words(version.created_at) %> ago
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <div class="px-6 py-4 border-t border-gray-200">
    <%= paginate @versions %>
  </div>
</div>
