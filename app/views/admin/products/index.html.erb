<% content_for :title, "Products Catalog" %>

<div class="glass-card p-8">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h3 class="text-xl font-bold">Products</h3>
      <p class="text-sm text-slate-500">Manage your entire inventory from one place.</p>
    </div>
    <div class="flex space-x-3">
      <div class="relative">
        <input type="text" placeholder="Search products..." class="pl-10 pr-4 py-2 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none transition w-64">
        <svg class="w-5 h-5 absolute left-3 top-2.5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
      </div>
      <a href="<%= new_admin_product_path %>" class="px-4 py-2 bg-indigo-600 text-white rounded-xl font-semibold shadow-lg shadow-indigo-200 hover:bg-indigo-700 transition flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path></svg>
        New Product
      </a>
    </div>
  </div>

  <div class="overflow-x-auto">
    <table class="w-full text-left">
      <thead>
        <tr class="text-slate-400 text-xs font-bold uppercase tracking-widest border-b border-slate-100">
          <th class="pb-4 px-4 w-16">Item</th>
          <th class="pb-4 px-4">Details</th>
          <th class="pb-4 px-4">Price</th>
          <th class="pb-4 px-4">Inventory</th>
          <th class="pb-4 px-4 text-center">Variants</th>
          <th class="pb-4 px-4">Status</th>
          <th class="pb-4 px-4 text-right">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-50">
        <% @products.each do |product| %>
          <tr class="group hover:bg-slate-50 transition">
            <td class="py-4 px-4">
              <div class="w-14 h-14 rounded-lg bg-white border border-slate-200 flex items-center justify-center overflow-hidden">
                <% if product.primary_image.present? %>
                  <img src="<%= product.primary_image.url %>" class="w-full h-full object-cover">
                <% else %>
                  <svg class="w-7 h-7 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                <% end %>
              </div>
            </td>
            <td class="py-4 px-4">
              <a href="<%= admin_product_path(product) %>" class="font-bold text-slate-800 hover:text-indigo-600 transition"><%= product.name %></a>
              <p class="text-xs text-slate-500 mt-1">SKU: <%= product.sku %></p>
              <div class="flex mt-1 space-x-1">
                <% product.categories.each do |cat| %>
                  <span class="text-[9px] px-1.5 py-0.5 bg-slate-100 text-slate-500 rounded font-bold uppercase"><%= cat.name %></span>
                <% end %>
              </div>
            </td>
            <td class="py-4 px-4">
              <p class="text-sm font-bold text-slate-800">Rp <%= number_with_delimiter(product.price.to_i) %></p>
              <% if product.compare_at_price.present? %>
                <p class="text-xs text-slate-400 line-through">Rp <%= number_with_delimiter(product.compare_at_price.to_i) %></p>
              <% end %>
            </td>
            <td class="py-4 px-4">
              <div class="flex items-center">
                <div class="w-2 h-2 rounded-full mr-2 <%= product.stock_quantity > 10 ? 'bg-emerald-500' : (product.stock_quantity > 0 ? 'bg-amber-500' : 'bg-red-500') %>"></div>
                <span class="text-sm font-medium text-slate-600"><%= product.stock_quantity %> in stock</span>
              </div>
            </td>
            <td class="py-4 px-4 text-center">
              <span class="px-2 py-1 bg-indigo-50 text-indigo-700 text-xs font-bold rounded-lg"><%= product.product_variants.count %></span>
            </td>
            <td class="py-4 px-4">
              <span class="inline-block px-2 py-1 text-[10px] font-bold rounded-md <%= product.active? ? 'bg-emerald-100 text-emerald-700' : 'bg-slate-100 text-slate-500' %> uppercase">
                <%= product.active? ? 'Active' : 'Draft' %>
              </span>
            </td>
            <td class="py-4 px-4 text-right">
              <div class="flex justify-end space-x-2 opacity-0 group-hover:opacity-100 transition">
                <a href="<%= edit_admin_product_path(product) %>" class="p-2 text-slate-400 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
                </a>
                <%= button_to admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: "p-2 text-slate-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition" do %>
                   <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
