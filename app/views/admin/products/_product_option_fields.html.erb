<div class="nested-form-wrapper p-6 bg-slate-50 rounded-2xl border border-slate-200 space-y-4 shadow-sm" data-new-record="<%= f.object.new_record? %>">
  <div class="flex justify-between items-center">
    <div class="flex-1 mr-4">
      <%= f.label :name, "Option Name", class: "block text-xs font-bold text-slate-500 uppercase tracking-widest mb-1" %>
      <%= f.text_field :name, placeholder: "e.g., Color", class: "w-full p-2 bg-white border border-slate-200 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none text-sm" %>
    </div>
    
    <div class="flex items-center space-x-2 pt-5">
      <% if f.object.persisted? %>
        <div class="flex items-center text-red-500 space-x-1">
          <%= f.check_box :_destroy, class: "w-4 h-4 rounded text-red-600 focus:ring-red-500" %>
          <span class="text-xs font-bold uppercase">Delete</span>
        </div>
      <% else %>
        <button type="button" data-action="nested-form#remove" class="text-red-500 hover:text-red-700 transition">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
        </button>
      <% end %>
    </div>
  </div>

  <div class="space-y-2" data-controller="nested-form">
    <div class="flex justify-between items-center">
       <p class="text-xs font-bold text-slate-500 uppercase tracking-widest">Option Values</p>
       <button type="button" data-action="nested-form#add" class="text-[10px] font-bold text-indigo-600 bg-white px-2 py-1 rounded border border-indigo-100 hover:bg-indigo-50 transition">
         + Add Value
       </button>
    </div>
    
    <template data-nested-form-target="template">
      <%= f.fields_for :product_option_values, ProductOptionValue.new, child_index: 'NEW_RECORD' do |value_form| %>
        <%= render "admin/products/product_option_value_fields", f: value_form %>
      <% end %>
    </template>

    <div class="flex flex-wrap gap-3" data-nested-form-target="container">
      <%= f.fields_for :product_option_values do |value_form| %>
        <%= render "admin/products/product_option_value_fields", f: value_form %>
      <% end %>
    </div>
  </div>
</div>
