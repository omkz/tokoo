<div class="group relative aspect-square bg-white rounded-xl border border-slate-200 overflow-hidden hover:shadow-md transition shadow-sm" data-new-record="<%= f.object.new_record? %>">
  <% if f.object.image.attached? %>
    <%= image_tag f.object.image.variant(resize_to_fill: [200, 200]), class: "w-full h-full object-cover" %>
  <% else %>
    <div class="w-full h-full flex items-center justify-center bg-slate-50 text-slate-300 italic text-[10px]">No Image</div>
  <% end %>

  <!-- Controls Overlay -->
  <div class="absolute inset-0 bg-slate-900/40 opacity-0 group-hover:opacity-100 transition flex flex-col justify-between p-2">
    <div class="flex justify-between items-start">
      <div class="flex items-center bg-white/90 rounded px-1.5 py-0.5">
        <%= f.check_box :primary, class: "w-3 h-3 text-indigo-600 rounded focus:ring-indigo-500 mr-1.5" %>
        <span class="text-[9px] font-bold text-slate-700 uppercase">Main</span>
      </div>
      
      <% if f.object.persisted? %>
        <div class="flex items-center bg-red-500/90 rounded px-1.5 py-0.5">
          <%= f.check_box :_destroy, class: "w-3 h-3 text-white border-white rounded focus:ring-red-500 mr-1.5" %>
          <span class="text-[9px] font-bold text-white uppercase">Del</span>
        </div>
      <% end %>
    </div>
    
    <% if f.object.new_record? %>
      <div class="mt-auto">
        <%= f.file_field :image, class: "w-full text-[8px] text-white file:hidden" %>
      </div>
    <% end %>
  </div>
  
  <% if f.object.primary? %>
    <div class="absolute top-1 left-1 px-1.5 py-0.5 bg-indigo-600 text-white text-[8px] font-bold rounded uppercase shadow-sm">
      Primary
    </div>
  <% end %>
</div>
