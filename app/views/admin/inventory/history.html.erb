<% content_for :title, "Inventory Movement History" %>

<div class="glass-card p-8">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h3 class="text-xl font-bold">Inventory Movement History</h3>
      <p class="text-sm text-slate-500">Complete audit trail of all stock changes</p>
    </div>
    <%= link_to admin_inventory_index_path, class: "px-4 py-2 bg-slate-100 text-slate-700 rounded-xl font-semibold hover:bg-slate-200 transition" do %>
      ‚Üê Back to Inventory
    <% end %>
  </div>

  <!-- Filters -->
  <div class="mb-6 flex space-x-3">
    <%= link_to "All", history_admin_inventory_index_path, class: "px-3 py-1.5 #{params[:movement_type].blank? ? 'bg-indigo-600 text-white' : 'bg-slate-100 text-slate-700'} rounded-lg text-sm font-semibold" %>
    <%= link_to "Sales", history_admin_inventory_index_path(movement_type: 'sale'), class: "px-3 py-1.5 #{params[:movement_type] == 'sale' ? 'bg-indigo-600 text-white' : 'bg-slate-100 text-slate-700'} rounded-lg text-sm font-semibold" %>
    <%= link_to "Returns", history_admin_inventory_index_path(movement_type: 'return'), class: "px-3 py-1.5 #{params[:movement_type] == 'return' ? 'bg-indigo-600 text-white' : 'bg-slate-100 text-slate-700'} rounded-lg text-sm font-semibold" %>
    <%= link_to "Adjustments", history_admin_inventory_index_path(movement_type: 'adjustment'), class: "px-3 py-1.5 #{params[:movement_type] == 'adjustment' ? 'bg-indigo-600 text-white' : 'bg-slate-100 text-slate-700'} rounded-lg text-sm font-semibold" %>
  </div>

  <div class="overflow-x-auto">
    <table class="w-full text-left">
      <thead>
        <tr class="text-slate-400 text-xs font-bold uppercase tracking-widest border-b border-slate-100">
          <th class="pb-4 px-4">Date</th>
          <th class="pb-4 px-4">Product</th>
          <th class="pb-4 px-4">Type</th>
          <th class="pb-4 px-4 text-center">Quantity</th>
          <th class="pb-4 px-4 text-center">Before</th>
          <th class="pb-4 px-4 text-center">After</th>
          <th class="pb-4 px-4">User</th>
          <th class="pb-4 px-4">Note</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-50">
        <% @movements.each do |movement| %>
          <tr class="hover:bg-slate-50 transition">
            <td class="py-4 px-4">
              <div class="text-sm text-slate-600"><%= movement.created_at.strftime("%b %d, %Y") %></div>
              <div class="text-xs text-slate-400"><%= movement.created_at.strftime("%I:%M %p") %></div>
            </td>
            <td class="py-4 px-4">
              <div class="font-semibold text-slate-800"><%= movement.product.name %></div>
              <% if movement.product_variant %>
                <div class="text-xs text-slate-500">Variant: <%= movement.product_variant.name || movement.product_variant.sku %></div>
              <% end %>
            </td>
            <td class="py-4 px-4">
              <% case movement.movement_type %>
              <% when 'sale' %>
                <span class="px-2 py-1 bg-blue-100 text-blue-700 text-xs font-bold rounded-lg">SALE</span>
              <% when 'return' %>
                <span class="px-2 py-1 bg-emerald-100 text-emerald-700 text-xs font-bold rounded-lg">RETURN</span>
              <% when 'adjustment' %>
                <span class="px-2 py-1 bg-purple-100 text-purple-700 text-xs font-bold rounded-lg">ADJUSTMENT</span>
              <% when 'purchase' %>
                <span class="px-2 py-1 bg-green-100 text-green-700 text-xs font-bold rounded-lg">PURCHASE</span>
              <% when 'damage' %>
                <span class="px-2 py-1 bg-red-100 text-red-700 text-xs font-bold rounded-lg">DAMAGE</span>
              <% end %>
            </td>
            <td class="py-4 px-4 text-center">
              <span class="font-bold <%= movement.movement_type == 'sale' || movement.movement_type == 'damage' ? 'text-red-600' : 'text-emerald-600' %>">
                <%= movement.movement_type == 'sale' || movement.movement_type == 'damage' ? '-' : '+' %><%= movement.quantity %>
              </span>
            </td>
            <td class="py-4 px-4 text-center">
              <span class="text-sm text-slate-600"><%= movement.quantity_before %></span>
            </td>
            <td class="py-4 px-4 text-center">
              <span class="text-sm font-bold text-slate-800"><%= movement.quantity_after %></span>
            </td>
            <td class="py-4 px-4">
              <span class="text-sm text-slate-600"><%= movement.user&.email_address || 'System' %></span>
            </td>
            <td class="py-4 px-4">
              <% if movement.note.present? %>
                <span class="text-xs text-slate-500"><%= movement.note %></span>
              <% else %>
                <span class="text-xs text-slate-400">-</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-4">
    <%= paginate @movements %>
  </div>
</div>
