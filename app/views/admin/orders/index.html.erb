<% content_for :title, "Orders Management" %>

<div class="glass-card p-8">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h3 class="text-xl font-bold">Orders</h3>
      <p class="text-sm text-slate-500">Track and fulfill your customer purchases.</p>
    </div>
    <div class="flex space-x-3">
      <div class="relative">
        <input type="text" placeholder="Order ID or Name..." class="pl-10 pr-4 py-2 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none transition w-64">
        <svg class="w-5 h-5 absolute left-3 top-2.5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
      </div>
    </div>
  </div>

  <div class="overflow-x-auto">
    <table class="w-full text-left border-separate border-spacing-y-2">
      <thead>
        <tr class="text-slate-400 text-xs font-bold uppercase tracking-widest px-4">
          <th class="pb-2 px-4">Order</th>
          <th class="pb-2 px-4">Customer</th>
          <th class="pb-2 px-4">Date</th>
          <th class="pb-2 px-4">Status</th>
          <th class="pb-2 px-4">Payment</th>
          <th class="pb-2 px-4">Total</th>
          <th class="pb-2 px-4 text-right">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if @orders.any? %>
          <% @orders.each do |order| %>
            <tr class="group hover:bg-slate-50/80 transition-colors">
              <td class="py-4 px-4 bg-slate-50 rounded-l-2xl group-hover:bg-white transition-colors">
                <p class="font-bold text-slate-800"><%= order.order_number %></p>
              </td>
              <td class="py-4 px-4 bg-slate-50 group-hover:bg-white transition-colors">
                <p class="text-sm font-semibold text-slate-700"><%= order.customer_name %></p>
                <p class="text-xs text-slate-500"><%= order.customer_email %></p>
              </td>
              <td class="py-4 px-4 bg-slate-50 group-hover:bg-white transition-colors text-sm text-slate-600">
                <%= order.created_at.strftime("%b %d, %Y") %>
              </td>
              <td class="py-4 px-4 bg-slate-50 group-hover:bg-white transition-colors">
                <% 
                  status_color = case order.status
                  when 'pending' then 'bg-amber-100 text-amber-700'
                  when 'confirmed', 'processing' then 'bg-blue-100 text-blue-700'
                  when 'shipped' then 'bg-indigo-100 text-indigo-700'
                  when 'delivered' then 'bg-emerald-100 text-emerald-700'
                  when 'cancelled' then 'bg-rose-100 text-rose-700'
                  else 'bg-slate-100 text-slate-600'
                  end
                %>
                <span class="inline-block px-3 py-1 text-[10px] font-bold rounded-full <%= status_color %> uppercase tracking-wider">
                  <%= order.status.humanize %>
                </span>
              </td>
              <td class="py-4 px-4 bg-slate-50 group-hover:bg-white transition-colors">
                <span class="text-xs font-semibold <%= order.payment_status == 'paid' ? 'text-emerald-600' : 'text-slate-500' %>">
                   <%= order.payment_status.humanize %>
                </span>
              </td>
              <td class="py-4 px-4 bg-slate-50 group-hover:bg-white transition-colors">
                <p class="text-sm font-bold text-slate-800">Rp <%= number_with_delimiter(order.total.to_i) %></p>
              </td>
              <td class="py-4 px-4 bg-slate-50 rounded-r-2xl group-hover:bg-white transition-colors text-right">
                <a href="<%= admin_order_path(order) %>" class="px-3 py-1.5 bg-white border border-slate-200 text-slate-600 rounded-lg text-xs font-bold shadow-sm hover:border-indigo-600 hover:text-indigo-600 transition">
                  Details
                </a>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="7" class="py-20 text-center">
               <div class="w-16 h-16 mx-auto mb-4 bg-slate-100 rounded-full flex items-center justify-center text-slate-400">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg>
              </div>
              <p class="text-slate-500 font-medium">No orders found</p>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
