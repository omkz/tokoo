<% content_for :title, "Product Categories" %>

<div class="glass-card p-8">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h3 class="text-xl font-bold">Categories</h3>
      <p class="text-sm text-slate-500">Organize your products for easier discovery.</p>
    </div>
    <a href="<%= new_admin_category_path %>" class="px-4 py-2 bg-indigo-600 text-white rounded-xl font-semibold shadow-lg shadow-indigo-200 hover:bg-indigo-700 transition flex items-center">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path></svg>
      Add Category
    </a>
  </div>

  <div class="overflow-x-auto">
    <table class="w-full text-left">
      <thead>
        <tr class="text-slate-400 text-xs font-bold uppercase tracking-widest border-b border-slate-100">
          <th class="pb-4 px-4 text-center w-16">Icon</th>
          <th class="pb-4 px-4">Name</th>
          <th class="pb-4 px-4">Slug</th>
          <th class="pb-4 px-4">Parent</th>
          <th class="pb-4 px-4">Status</th>
          <th class="pb-4 px-4 text-right">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-50">
        <% @categories.each do |category| %>
          <tr class="group hover:bg-slate-50 transition">
            <td class="py-4 px-4">
              <div class="w-10 h-10 rounded-lg bg-white border border-slate-200 flex items-center justify-center overflow-hidden">
                <% if category.image_url.present? %>
                  <img src="<%= category.image_url %>" class="w-full h-full object-cover">
                <% else %>
                  <svg class="w-6 h-6 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path></svg>
                <% end %>
              </div>
            </td>
            <td class="py-4 px-4">
              <p class="font-bold text-slate-800"><%= category.name %></p>
              <p class="text-xs text-slate-500 truncate w-48"><%= category.description %></p>
            </td>
            <td class="py-4 px-4">
              <code class="text-xs bg-slate-100 px-2 py-1 rounded text-slate-600"><%= category.slug %></code>
            </td>
            <td class="py-4 px-4 text-sm text-slate-600">
              <%= category.parent&.name || "-" %>
            </td>
            <td class="py-4 px-4">
              <span class="inline-block px-2 py-1 text-[10px] font-bold rounded-md <%= category.active? ? 'bg-emerald-100 text-emerald-700' : 'bg-slate-100 text-slate-500' %> uppercase">
                <%= category.active? ? 'Active' : 'Inactive' %>
              </span>
            </td>
            <td class="py-4 px-4 text-right">
              <div class="flex justify-end space-x-2 opacity-0 group-hover:opacity-100 transition">
                <a href="<%= edit_admin_category_path(category) %>" class="p-2 text-slate-400 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
                </a>
                <%= button_to admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: "p-2 text-slate-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition" do %>
                   <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-4">
    <%= paginate @categories %>
  </div>
</div>
