<% content_for :title, "Dashboard Overview" %>

<section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
  <!-- Revenue Card -->
  <div class="glass-card p-6 border-l-4 border-indigo-500 hover:shadow-xl transition-all duration-300">
    <div class="flex items-center justify-between mb-4">
      <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Growth Revenue</p>
      <span class="p-2 bg-indigo-50 text-indigo-600 rounded-lg">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
      </span>
    </div>
    <p class="text-2xl font-black text-slate-800 tracking-tight">Rp <%= number_with_delimiter(@stats[:total_revenue].to_i) %></p>
    <div class="flex items-center mt-2 text-emerald-600 text-[10px] font-bold">
      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 12 12"><path d="M1 9l4.5-4.5L11 9l-4.5 4.5L1 9z"></path></svg>
      <span>+12.5% vs last month</span>
    </div>
  </div>

  <!-- AOV Card -->
  <div class="glass-card p-6 border-l-4 border-emerald-500 hover:shadow-xl transition-all duration-300">
    <div class="flex items-center justify-between mb-4">
      <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Avg Order Value</p>
      <span class="p-2 bg-emerald-50 text-emerald-600 rounded-lg">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path></svg>
      </span>
    </div>
    <p class="text-2xl font-black text-slate-800 tracking-tight">Rp <%= number_with_delimiter(@stats[:aov].to_i) %></p>
    <p class="mt-2 text-slate-400 text-[10px] font-medium italic">Efficiency optimization</p>
  </div>

  <!-- Orders Card -->
  <div class="glass-card p-6 border-l-4 border-blue-500 hover:shadow-xl transition-all duration-300">
    <div class="flex items-center justify-between mb-4">
      <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Total Volume</p>
      <span class="p-2 bg-blue-50 text-blue-600 rounded-lg">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg>
      </span>
    </div>
    <p class="text-2xl font-black text-slate-800 tracking-tight"><%= @stats[:orders_count] %></p>
    <p class="mt-2 text-blue-600 text-[10px] font-bold"><%= @stats[:pending_count] %> pending orders</p>
  </div>

  <!-- Stock Card -->
  <div class="glass-card p-6 border-l-4 border-amber-500 hover:shadow-xl transition-all duration-300">
    <div class="flex items-center justify-between mb-4">
      <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Inventory Health</p>
      <span class="p-2 bg-amber-50 text-amber-600 rounded-lg">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path></svg>
      </span>
    </div>
    <p class="text-2xl font-black text-slate-800 tracking-tight"><%= Product.sum(:stock_quantity) %></p>
    <p class="mt-2 text-amber-600 text-[10px] font-bold"><%= Product.where('stock_quantity < 5').count %> low stock items</p>
  </div>
</section>

<!-- Revenue Performance Chart -->
<div class="glass-card mb-10 p-8">
  <div class="flex items-center justify-between mb-8">
    <div>
      <h3 class="text-xl font-black text-slate-800">Sales Performance</h3>
      <p class="text-xs text-slate-500 font-medium">Revenue trend for the last 7 days</p>
    </div>
    <div class="flex gap-2">
      <span class="flex items-center text-xs font-bold text-slate-400 border border-slate-200 px-3 py-1 rounded-full bg-slate-50">Last 7 Days</span>
    </div>
  </div>

  <div class="flex items-end justify-between h-48 gap-4 px-4 pt-4 border-b border-l border-slate-100">
    <% max_rev = @sales_chart.map { |s| s[:revenue] }.max.to_f %>
    <% max_rev = 1.0 if max_rev == 0 %>
    <% @sales_chart.each do |day| %>
      <% height = (day[:revenue] / max_rev) * 100 %>
      <div class="flex-1 flex flex-col items-center group relative h-full justify-end">
        <div class="w-full bg-indigo-500/10 rounded-t-lg transition-all duration-500 group-hover:bg-indigo-500/30 relative" style="height: <%= height %>%;">
           <div class="absolute -top-10 left-1/2 -translate-x-1/2 px-2 py-1 bg-slate-800 text-white text-[10px] font-bold rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap z-10 shadow-xl">
             Rp <%= number_with_delimiter(day[:revenue]) %>
           </div>
           <div class="absolute inset-x-0 top-0 bottom-0 bg-indigo-600 rounded-t-lg transform scale-y-0 origin-bottom transition-transform duration-700 group-hover:scale-y-100" style="transition-delay: <%= rand(100..400) %>ms"></div>
        </div>
        <p class="text-[10px] font-bold text-slate-400 mt-2 uppercase tracking-tighter"><%= day[:date] %></p>
      </div>
    <% end %>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
  <!-- Recent Orders Table -->
  <div class="glass-card p-0 overflow-hidden">
    <div class="p-8 border-b border-slate-100 flex justify-between items-center">
      <h3 class="text-xl font-black text-slate-800">Recent Orders</h3>
      <a href="<%= admin_orders_path %>" class="text-xs font-black text-indigo-600 hover:text-indigo-800 uppercase tracking-widest">See all</a>
    </div>
    
    <div class="divide-y divide-slate-50">
      <% if @recent_orders.any? %>
        <% @recent_orders.each do |order| %>
          <div class="flex items-center justify-between p-6 hover:bg-slate-50 transition-colors group">
            <div class="flex items-center gap-4">
              <div class="w-10 h-10 rounded-xl bg-indigo-50 border border-indigo-100 flex items-center justify-center text-indigo-600 font-black text-xs">
                <%= order.customer_name&.first(2)&.upcase || 'GS' %>
              </div>
              <div>
                <p class="text-sm font-black text-slate-800 group-hover:text-indigo-600 transition-colors"><%= order.order_number %></p>
                <p class="text-[10px] text-slate-400 font-bold uppercase tracking-tighter"><%= time_ago_in_words(order.created_at) %> ago â€¢ <%= order.customer_name %></p>
              </div>
            </div>
            <div class="text-right">
              <p class="text-sm font-black text-slate-800">Rp <%= number_with_delimiter(order.total.to_i) %></p>
              <% status_class = case order.status
                 when 'pending' then 'bg-amber-100 text-amber-600'
                 when 'confirmed', 'shipped' then 'bg-emerald-100 text-emerald-600'
                 when 'cancelled' then 'bg-red-100 text-red-600'
                 else 'bg-slate-100 text-slate-600'
                 end %>
              <span class="inline-block px-2 py-0.5 text-[8px] font-black rounded-md <%= status_class %> uppercase tracking-widest mt-1"><%= order.status %></span>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="p-12 text-center">
          <p class="text-xs text-slate-400 font-bold uppercase tracking-widest">No recent transactions</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Top Products Table -->
  <div class="glass-card p-0 overflow-hidden">
    <div class="p-8 border-b border-slate-100 flex justify-between items-center">
      <h3 class="text-xl font-black text-slate-800">Best Sellers</h3>
      <a href="<%= admin_products_path %>" class="text-xs font-black text-indigo-600 hover:text-indigo-800 uppercase tracking-widest">Manage</a>
    </div>
    
    <div class="divide-y divide-slate-50">
      <% @top_products.each do |product| %>
        <div class="flex items-center justify-between p-6 hover:bg-slate-50 transition-colors group">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-xl bg-white border border-slate-100 overflow-hidden shrink-0 shadow-sm group-hover:scale-105 transition-transform">
              <img src="<%= product.image_url %>" class="w-full h-full object-cover">
            </div>
            <div>
              <p class="text-sm font-black text-slate-800 group-hover:text-indigo-600 transition-colors truncate w-48"><%= product.name %></p>
              <div class="flex items-center gap-2 mt-1">
                <span class="text-[10px] font-bold text-slate-400 uppercase tracking-tighter">SKU: <%= product.sku %></span>
                <span class="inline-block w-1 h-1 rounded-full bg-slate-300"></span>
                <span class="text-[10px] font-bold text-emerald-600 uppercase tracking-tighter"><%= product.respond_to?(:total_sold) ? product.total_sold : '-' %> sold</span>
              </div>
            </div>
          </div>
          <div class="text-right">
            <p class="text-sm font-black text-slate-800">Rp <%= number_to_human(product.respond_to?(:total_revenue) ? product.total_revenue : product.price, precision: 1, units: { thousand: 'k', million: 'm' }) %></p>
            <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest mt-1">Gross Rev</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
