<% content_for :title, "Dashboard Overview" %>

<section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
  <div class="glass-card stat-card">
    <div class="flex items-center justify-between mb-2">
      <span class="p-2 bg-indigo-100 text-indigo-600 rounded-lg">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
      </span>
    </div>
    <p class="stat-label">Total Revenue</p>
    <p class="stat-value">Rp <%= number_with_delimiter(@stats[:total_revenue].to_i) %></p>
  </div>

  <div class="glass-card stat-card">
    <div class="flex items-center justify-between mb-2">
      <span class="p-2 bg-emerald-100 text-emerald-600 rounded-lg">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg>
      </span>
    </div>
    <p class="stat-label">Total Orders</p>
    <p class="stat-value"><%= @stats[:orders_count] %></p>
  </div>

  <div class="glass-card stat-card">
    <div class="flex items-center justify-between mb-2">
      <span class="p-2 bg-blue-100 text-blue-600 rounded-lg">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path></svg>
      </span>
    </div>
    <p class="stat-label">Products</p>
    <p class="stat-value"><%= @stats[:products_count] %></p>
  </div>

  <div class="glass-card stat-card">
    <div class="flex items-center justify-between mb-2">
      <span class="p-2 bg-amber-100 text-amber-600 rounded-lg">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
      </span>
    </div>
    <p class="stat-label">Stock Units</p>
    <p class="stat-value"><%= Product.sum(:stock_quantity) %></p>
  </div>
</section>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
  <div class="glass-card p-8">
    <div class="flex justify-between items-center mb-6">
      <h3 class="text-xl font-bold">Recent Orders</h3>
      <a href="/admin/orders" class="text-sm font-semibold text-indigo-600 hover:text-indigo-800">See all</a>
    </div>
    
    <% if @recent_orders.any? %>
      <div class="space-y-4">
        <% @recent_orders.each do |order| %>
          <div class="flex items-center justify-between p-4 rounded-xl bg-slate-50 border border-slate-100 transition hover:bg-white hover:shadow-sm">
            <div class="flex items-center">
              <div class="w-10 h-10 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 font-bold text-xs uppercase mr-4">
                <%= order.customer_name&.first(2) || 'G' %>
              </div>
              <div>
                <p class="text-sm font-bold text-slate-800"><%= order.order_number %></p>
                <p class="text-xs text-slate-500"><%= time_ago_in_words(order.created_at) %> ago • <%= order.customer_name %></p>
              </div>
            </div>
            <div class="text-right">
              <p class="text-sm font-bold text-slate-800">Rp <%= number_with_delimiter(order.total.to_i) %></p>
              <span class="inline-block px-2 py-1 text-[10px] font-bold rounded-md bg-amber-100 text-amber-700 uppercase"><%= order.status %></span>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-10">
        <div class="w-16 h-16 mx-auto mb-4 bg-slate-100 rounded-full flex items-center justify-center text-slate-400">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg>
        </div>
        <p class="text-slate-500 font-medium">No recent orders yet</p>
      </div>
    <% end %>
  </div>

  <div class="glass-card p-8">
    <div class="flex justify-between items-center mb-6">
      <h3 class="text-xl font-bold">Newest Products</h3>
      <a href="/admin/products" class="text-sm font-semibold text-indigo-600 hover:text-indigo-800">See all</a>
    </div>
    
    <div class="space-y-4">
      <% @top_products.each do |product| %>
        <div class="flex items-center justify-between p-4 rounded-xl bg-slate-50 border border-slate-100 transition hover:bg-white hover:shadow-sm">
          <div class="flex items-center">
            <div class="w-12 h-12 rounded-lg bg-white border border-slate-200 overflow-hidden mr-4">
              <% if product.primary_image.present? %>
                <img src="<%= product.primary_image.url %>" class="w-full h-full object-cover">
              <% else %>
                <div class="w-full h-full flex items-center justify-center text-slate-300">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                </div>
              <% end %>
            </div>
            <div>
              <p class="text-sm font-bold text-slate-800 truncate w-40"><%= product.name %></p>
              <p class="text-xs text-slate-500">SKU: <%= product.sku %> • <%= product.stock_quantity %> units</p>
            </div>
          </div>
          <p class="text-sm font-bold text-slate-800">Rp <%= number_with_delimiter(product.price.to_i) %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
