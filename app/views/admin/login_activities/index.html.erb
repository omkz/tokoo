<div class="mb-6 flex justify-between items-center">
  <h1 class="text-2xl font-bold text-gray-900">Login Activity</h1>
</div>

<div class="bg-white shadow-sm rounded-lg overflow-hidden border border-gray-200">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User / Identity</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">IP Address</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User Agent</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Time</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @login_activities.each do |activity| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm font-medium text-gray-900"><%= activity.user ? activity.user.email_address : activity.identity %></div>
            <% if activity.user %>
              <div class="text-xs text-gray-500">User ID: <%= activity.user_id %></div>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <% if activity.success %>
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                Success
              </span>
            <% else %>
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800" title="<%= activity.failure_reason %>">
                Failed
              </span>
              <div class="text-xs text-red-500 mt-1"><%= activity.failure_reason %></div>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <% if activity.user&.admin? %>
              <%= activity.ip_address %>
            <% else %>
              <%= activity.ip_address.to_s.gsub(/\.\d+\.\d+$/, '.xxx.xxx') %>
            <% end %>
          </td>
          <td class="px-6 py-4 text-sm text-gray-500 max-w-xs truncate" title="<%= activity.user_agent %>">
            <%= activity.user_agent %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= time_ago_in_words(activity.created_at) %> ago
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <div class="px-6 py-4 border-t border-gray-200">
    <%= paginate @login_activities %>
  </div>
</div>
