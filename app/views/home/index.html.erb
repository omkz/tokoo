<div data-controller="home">
  <!-- Enhanced Hero Section -->
  <section class="relative bg-gradient-hero py-20 md:py-32 overflow-hidden">
    <!-- Animated Background Elements -->
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-20 left-10 w-72 h-72 bg-white rounded-full mix-blend-overlay filter blur-3xl animate-float"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-white rounded-full mix-blend-overlay filter blur-3xl animate-float delay-200"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center">
        <div data-hero-animate class="opacity-0">
          <h1 class="text-5xl md:text-7xl font-bold text-white mb-6">
            Welcome to <span class="text-pink-200"><%= StoreSetting.store_name %></span>
          </h1>
        </div>
        
        <div data-hero-animate class="opacity-0">
          <p class="text-xl md:text-2xl text-white/90 mb-8 max-w-3xl mx-auto">
            Shop with confidence using secure passwordless authentication and two-factor security. 
            Discover amazing products at unbeatable prices.
          </p>
        </div>

        <div data-hero-animate class="opacity-0 flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
          <% if authenticated? %>
            <a href="#products" data-action="click->home#scrollToSection" class="px-8 py-4 bg-white text-purple-600 rounded-lg font-semibold hover:bg-gray-50 transition-all hover-lift shadow-glow">
              Start Shopping
            </a>
          <% else %>
            <%= link_to "Get Started", new_session_path, class: "px-8 py-4 bg-white text-purple-600 rounded-lg font-semibold hover:bg-gray-50 transition-all hover-lift shadow-glow" %>
            <a href="#products" data-action="click->home#scrollToSection" class="px-8 py-4 bg-transparent border-2 border-white text-white rounded-lg font-semibold hover:bg-white/10 transition-all">
              Browse Products
            </a>
          <% end %>
        </div>

        <!-- Trust Badges -->
        <div data-hero-animate class="opacity-0 flex flex-wrap justify-center gap-8 text-white/80">
          <div class="flex items-center gap-2">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            <span class="font-medium">Secure Checkout</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
            </svg>
            <span class="font-medium">Free Shipping</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6" />
            </svg>
            <span class="font-medium">Easy Returns</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Category Filter Bar -->
  <section class="sticky top-16 z-40 bg-white/80 backdrop-blur-md border-b border-slate-100 py-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center gap-4 overflow-x-auto no-scrollbar pb-2">
        <%= link_to root_path(anchor: "products"), 
            class: "px-6 py-2 rounded-full text-sm font-bold transition-all whitespace-nowrap #{params[:category].blank? ? 'bg-indigo-600 text-white shadow-glow-indigo' : 'bg-slate-100 text-slate-600 hover:bg-slate-200'}",
            data: { turbo_frame: "products_frame" } do %>
          All Products
        <% end %>
        
        <% @categories.each do |category| %>
          <%= link_to root_path(category: category.slug, anchor: "products"), 
              class: "px-6 py-2 rounded-full text-sm font-bold transition-all whitespace-nowrap #{params[:category] == category.slug ? 'bg-indigo-600 text-white shadow-glow-indigo' : 'bg-slate-100 text-slate-600 hover:bg-slate-200'}",
              data: { turbo_frame: "products_frame" } do %>
            <%= category.name %>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>

  <!-- Featured Products Section -->
  <section class="py-20 bg-white" id="products">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <%= turbo_frame_tag "products_frame" do %>
        <div class="flex flex-col md:flex-row justify-between items-end mb-12 gap-4">
          <div data-animate>
            <h2 class="text-4xl font-black text-slate-900 mb-2">
              <%= @category ? @category.name : "Featured Selection" %>
            </h2>
            <p class="text-lg text-slate-500 font-medium">
              <%= @category ? @category.description : "Quality products curated for your best experience." %>
            </p>
          </div>
          <div class="text-sm font-bold text-slate-400 bg-slate-50 px-4 py-2 rounded-lg border border-slate-100">
            Showing <span class="text-indigo-600"><%= @products.offset_value + 1 %>-<%= @products.offset_value + @products.length %></span> of <%= @products.total_count %> items
          </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
          <% if @products.any? %>
            <% @products.each do |product| %>
              <%= link_to product_detail_path(product.slug), data: { turbo: false, animate: true }, class: "bg-white rounded-3xl shadow-sm border border-slate-100 overflow-hidden hover-lift group flex flex-col h-full" do %>
                <div class="relative bg-slate-50 h-72 flex items-center justify-center p-8 overflow-hidden">
                  <% if product.primary_image %>
                    <img src="<%= product.image_url %>" class="h-full w-full object-contain group-hover:scale-110 transition-transform duration-500" alt="<%= product.name %>">
                  <% else %>
                     <div class="text-slate-300">
                        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                     </div>
                  <% end %>
                  <% if product.created_at > 7.days.ago %>
                    <span class="absolute top-4 left-4 px-3 py-1 bg-emerald-500 text-white text-[10px] font-black uppercase tracking-widest rounded-full">New Arrival</span>
                  <% end %>
                </div>
                <div class="p-6 flex flex-col flex-1">
                  <h3 class="text-lg font-black text-slate-800 mb-2 line-clamp-1 group-hover:text-indigo-600 transition-colors"><%= product.name %></h3>
                  <p class="text-slate-500 mb-6 text-xs line-clamp-2 font-medium leading-relaxed"><%= product.short_description %></p>
                  
                  <div class="mt-auto flex items-center justify-between">
                    <div>
                      <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Price</p>
                      <p class="text-xl font-black text-slate-900"><%= number_to_currency(product.price, unit: "Rp", precision: 0, delimiter: ".") %></p>
                    </div>
                    <div class="p-3 bg-slate-900 text-white rounded-2xl group-hover:bg-indigo-600 group-hover:shadow-glow-indigo transition-all">
                      <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                      </svg>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          <% else %>
            <div data-animate class="col-span-full py-32 text-center bg-slate-50 rounded-3xl border-2 border-dashed border-slate-200">
              <div class="w-20 h-20 bg-white shadow-sm rounded-2xl flex items-center justify-center mx-auto mb-6 text-slate-300">
                <svg class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                </svg>
              </div>
              <h3 class="text-xl font-black text-slate-900 mb-2">No items found</h3>
              <p class="text-slate-500 font-medium max-w-xs mx-auto text-sm">We couldn't find any products in this category at the moment.</p>
              <%= link_to "Clear filters", root_path(anchor: "products"), class: "mt-6 inline-block text-indigo-600 font-bold hover:underline", data: { turbo_frame: "products_frame" } %>
            </div>
          <% end %>
        </div>

        <!-- Pagination -->
        <% if @products.total_pages > 1 %>
          <div class="mt-20 flex justify-center items-center gap-2">
            <% if @products.first_page? %>
              <div class="p-3 text-slate-300 border border-slate-100 rounded-xl cursor-not-allowed">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
              </div>
            <% else %>
              <%= link_to root_path(page: @products.prev_page, category: params[:category], anchor: "products"), 
                  class: "p-3 text-slate-600 border border-slate-200 rounded-xl hover:bg-slate-50 transition-colors",
                  data: { turbo_frame: "products_frame" } do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
              <% end %>
            <% end %>

            <div class="flex items-center gap-1 bg-slate-50 p-1 rounded-2xl border border-slate-100">
              <% @products.total_pages.times do |i| %>
                <% pnum = i + 1 %>
                <%= link_to pnum, root_path(page: pnum, category: params[:category], anchor: "products"), 
                    class: "w-10 h-10 flex items-center justify-center rounded-xl text-sm font-black transition-all #{pnum == @products.current_page ? 'bg-white text-indigo-600 shadow-sm border border-slate-100 scale-110' : 'text-slate-400 hover:text-slate-600 hover:bg-white/50'}",
                    data: { turbo_frame: "products_frame" } %>
              <% end %>
            </div>

            <% if @products.last_page? %>
              <div class="p-3 text-slate-300 border border-slate-100 rounded-xl cursor-not-allowed">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
              </div>
            <% else %>
              <%= link_to root_path(page: @products.next_page, category: params[:category], anchor: "products"), 
                  class: "p-3 text-slate-600 border border-slate-200 rounded-xl hover:bg-slate-50 transition-colors",
                  data: { turbo_frame: "products_frame" } do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
              <% end %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </section>
      </div>
    </div>
  </section>

  <!-- Social Proof / Testimonials -->
  <section class="py-20 bg-gradient-to-br from-purple-50 to-pink-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16" data-animate>
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Loved by Thousands</h2>
        <p class="text-xl text-gray-600">See what our customers are saying</p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <div data-animate class="bg-white rounded-2xl p-8 shadow-lg hover-lift">
          <div class="flex items-center mb-4">
            <div class="h-12 w-12 rounded-full bg-gradient-primary flex items-center justify-center text-white font-bold text-xl">
              S
            </div>
            <div class="ml-4">
              <h4 class="font-bold text-gray-900">Sarah Johnson</h4>
              <div class="flex star-rating">
                <% 5.times do %>
                  <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
          <p class="text-gray-600 italic">"The passwordless authentication is so convenient! Shopping has never been easier and more secure."</p>
        </div>

        <div data-animate class="bg-white rounded-2xl p-8 shadow-lg hover-lift">
          <div class="flex items-center mb-4">
            <div class="h-12 w-12 rounded-full bg-gradient-secondary flex items-center justify-center text-white font-bold text-xl">
              M
            </div>
            <div class="ml-4">
              <h4 class="font-bold text-gray-900">Michael Chen</h4>
              <div class="flex star-rating">
                <% 5.times do %>
                  <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
          <p class="text-gray-600 italic">"Amazing product quality and fast shipping. The website is beautiful and easy to navigate!"</p>
        </div>

        <div data-animate class="bg-white rounded-2xl p-8 shadow-lg hover-lift">
          <div class="flex items-center mb-4">
            <div class="h-12 w-12 rounded-full bg-gradient-to-br from-green-500 to-teal-600 flex items-center justify-center text-white font-bold text-xl">
              E
            </div>
            <div class="ml-4">
              <h4 class="font-bold text-gray-900">Emma Williams</h4>
              <div class="flex star-rating">
                <% 5.times do %>
                  <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
          <p class="text-gray-600 italic">"Best online shopping experience! Two-factor authentication gives me peace of mind."</p>
        </div>
      </div>

      <!-- Stats -->
      <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-8" data-animate>
        <div class="text-center">
          <p class="text-5xl font-bold gradient-text mb-2">50K+</p>
          <p class="text-gray-600 font-medium">Happy Customers</p>
        </div>
        <div class="text-center">
          <p class="text-5xl font-bold gradient-text mb-2">100K+</p>
          <p class="text-gray-600 font-medium">Products Sold</p>
        </div>
        <div class="text-center">
          <p class="text-5xl font-bold gradient-text mb-2">4.9</p>
          <p class="text-gray-600 font-medium">Average Rating</p>
        </div>
        <div class="text-center">
          <p class="text-5xl font-bold gradient-text mb-2">24/7</p>
          <p class="text-gray-600 font-medium">Customer Support</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="py-20 bg-gradient-primary relative overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-96 h-96 bg-white rounded-full mix-blend-overlay filter blur-3xl"></div>
      <div class="absolute bottom-0 right-0 w-96 h-96 bg-white rounded-full mix-blend-overlay filter blur-3xl"></div>
    </div>

    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
      <div data-animate>
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
          Get Exclusive Deals
        </h2>
        <p class="text-xl text-white/90 mb-8">
          Subscribe to our newsletter and get 10% off your first purchase!
        </p>

        <form class="flex flex-col sm:flex-row gap-4 max-w-xl mx-auto">
          <input 
            type="email" 
            placeholder="Enter your email address" 
            class="flex-1 px-6 py-4 rounded-xl text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-4 focus:ring-white/30"
            required
          />
          <button 
            type="submit" 
            class="px-8 py-4 bg-white text-purple-600 rounded-xl font-semibold hover:bg-gray-50 transition-all hover-lift shadow-glow"
          >
            Subscribe
          </button>
        </form>

        <p class="text-white/70 text-sm mt-4">
          No spam, unsubscribe anytime. We respect your privacy.
        </p>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center" data-animate>
      <% unless authenticated? %>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
          Ready to Start Shopping?
        </h2>
        <p class="text-xl text-gray-600 mb-8">
          Create your account with secure passwordless authentication
        </p>
        <%= link_to "Sign Up Now", new_session_path, class: "inline-block px-8 py-4 bg-gradient-primary text-white rounded-xl font-semibold hover:shadow-glow-purple transition-all hover-lift text-lg" %>
      <% end %>
    </div>
  </section>
</div>
