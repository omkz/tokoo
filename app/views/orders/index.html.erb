<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="flex-1 min-w-0">
      <h2 class="text-3xl font-bold leading-7 text-slate-900 sm:text-4xl sm:truncate">
        My Orders
      </h2>
      <p class="mt-1 text-sm text-slate-500">
        Your complete shopping history at <%= StoreSetting.store_name %>.
      </p>
    </div>
  </div>

  <% if @orders.any? %>
    <div class="bg-white shadow overflow-hidden sm:rounded-md border border-slate-200">
      <ul role="list" class="divide-y divide-slate-200">
        <% @orders.each do |order| %>
          <li>
            <%= link_to order_path(order), class: "block hover:bg-slate-50 transition duration-150 ease-in-out" do %>
              <div class="flex items-center px-4 py-4 sm:px-6">
                <div class="min-w-0 flex-1 flex items-center">
                  <div class="flex-shrink-0">
                    <div class="h-12 w-12 rounded-lg bg-indigo-100 flex items-center justify-center">
                      <svg class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                      </svg>
                    </div>
                  </div>
                  <div class="min-w-0 flex-1 px-4 md:grid md:grid-cols-3 md:gap-4">
                    <div>
                      <p class="text-sm font-medium text-indigo-600 truncate"><%= order.order_number %></p>
                      <p class="mt-1 flex items-center text-sm text-slate-500">
                        <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <span class="truncate"><%= order.created_at.strftime("%d %b %Y") %></span>
                      </p>
                    </div>
                    <div class="hidden md:block">
                      <div>
                        <p class="text-sm text-slate-900">
                          Total: <span class="font-semibold text-slate-900"><%= number_to_currency(order.total) %></span>
                        </p>
                        <p class="mt-1 flex items-center text-sm text-slate-500">
                          <%= order.order_items.count %> items
                        </p>
                      </div>
                    </div>
                    <div class="hidden md:block">
                      <div class="flex items-center">
                        <% status_color = case order.status
                           when 'delivered' then 'bg-green-100 text-green-800'
                           when 'cancelled' then 'bg-red-100 text-red-800'
                           else 'bg-blue-100 text-blue-800'
                           end %>
                        <span class="px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_color %>">
                          <%= order.status.humanize %>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
                <div>
                  <svg class="h-5 w-5 text-slate-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                  </svg>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <div class="text-center py-12 bg-white rounded-lg border-2 border-dashed border-slate-300">
      <svg class="mx-auto h-12 w-12 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-slate-900">No orders yet</h3>
      <p class="mt-1 text-sm text-slate-500">Start shopping now and find amazing products!</p>
      <div class="mt-6">
        <%= link_to root_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          Browse Products
        <% end %>
      </div>
    </div>
  <% end %>
</div>
