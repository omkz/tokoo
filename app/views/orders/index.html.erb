<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-3xl font-bold text-gray-900">My Orders</h1>
      <p class="mt-2 text-sm text-gray-700">A list of all your orders, including their status and total payment.</p>
    </div>
  </div>

  <div class="mt-8 flex flex-col">
    <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Order Number</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Date</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Total</th>
                <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                  <span class="sr-only">View</span>
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <% if @orders.any? %>
                <% @orders.each do |order| %>
                  <tr class="hover:bg-gray-50 transition-colors">
                    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-indigo-600 sm:pl-6">
                      <%= link_to order.order_number, order_path(order) %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <%= order.created_at.strftime("%B %d, %Y") %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm">
                      <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium 
                        <%= case order.payment_status.to_sym
                            when :paid then 'bg-green-100 text-green-800'
                            when :pending then 'bg-yellow-100 text-yellow-800'
                            else 'bg-gray-100 text-gray-800'
                            end %>">
                        <%= order.payment_status.humanize %>
                      </span>
                      <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium ml-2
                        <%= case order.status.to_sym
                            when :confirmed then 'bg-blue-100 text-blue-800'
                            when :shipped then 'bg-purple-100 text-purple-800'
                            when :delivered then 'bg-indigo-100 text-indigo-800'
                            else 'bg-gray-100 text-gray-800'
                            end %>">
                        <%= order.status.humanize %>
                      </span>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm font-bold text-gray-900">
                      <%= number_to_currency(order.total, unit: "Rp", precision: 0, delimiter: ".") %>
                    </td>
                    <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                      <%= link_to "View Details", order_path(order), class: "text-indigo-600 hover:text-indigo-900" %>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="5" class="py-12 text-center">
                    <p class="text-gray-500">You haven't placed any orders yet.</p>
                    <%= link_to "Start Shopping", root_path, class: "mt-4 inline-block text-indigo-600 font-bold hover:text-indigo-500" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
